<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.d.oiltransterminal.MenuActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Меню"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показати мапу підприємства"/>

    <Button
        android:id="@+id/lorryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прокласти шлях для вантажного автотранспорту "/>

    <Button
        android:id="@+id/manButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прокласти мінімальний шлях для людини "/>

    <Button
        android:id="@+id/infoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Іформація про підприємство "/>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вихід"/>
</LinearLayout>
